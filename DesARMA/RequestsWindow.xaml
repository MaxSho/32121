<Window x:Class="DesARMA.RequestsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesARMA"
        mc:Ignorable="d"
        Title="Запити" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="1ColorStyle" Color="#2C3333" />
        <SolidColorBrush x:Key="2ColorStyle" Color="#395B64" />
        <SolidColorBrush x:Key="3ColorStyle" Color="#A5C9CA" />
        <SolidColorBrush x:Key="4ColorStyle" Color="#E7F6F2" />
        <Style TargetType="Label">
            <Setter Property="Label.Background" Value="{StaticResource 2ColorStyle}" />
            <Setter Property="Label.Foreground" Value="{StaticResource 3ColorStyle}" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="TextBox.Background" Value="{StaticResource 3ColorStyle}" />
            <Setter Property="TextBox.Foreground" Value="{StaticResource 1ColorStyle}" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background"  Value="{StaticResource 3ColorStyle}"/>
            <Setter Property="Foreground"  Value="{StaticResource 1ColorStyle}"/>
        </Style>
    </Window.Resources>
    <Grid Margin="0" Background="{StaticResource 2ColorStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Grid.Row="0"  Content="Держмитслужба" 
               FontFamily="Arial" FontSize="16" FlowDirection="RightToLeft" 
               />
        <TextBox Grid.Column="1" Grid.Row="0" Padding="5" Text="..." 
                  FontSize="16"/>
        

        <Label Grid.Column="0"  Content="Укрпатент" Grid.Row="1"
               FontFamily="Arial" FontSize="16" FlowDirection="RightToLeft"      
               />
        <TextBox Grid.Column="1" Padding="5" Text="..." Grid.Row="1"
                  FontSize="16"  />

        <Label Grid.Column="0" Grid.Row="2"  Content="Геонадра"
               FontFamily="Arial" FontSize="16" FlowDirection="RightToLeft"      
               />
        <TextBox Grid.Column="1" Grid.Row="2" Padding="5" Text="..." 
                  FontSize="16"  />

        <Label Grid.Column="0" Grid.Row="3"  Content="Держпраці" 
               FontFamily="Arial" FontSize="16" FlowDirection="RightToLeft"      
               />
        <TextBox Grid.Column="1" Grid.Row="3" Padding="5" Text="..." 
                  FontSize="16"  />

        <Label Grid.Column="0" Grid.Row="4"  Content="АМК" 
               FontFamily="Arial" FontSize="16" FlowDirection="RightToLeft"      
               />
        <TextBox Grid.Column="1" Grid.Row="4" Padding="5" Text="..." 
                  FontSize="16"  />

        <Label Grid.Column="0" Grid.Row="5"  Content="НКЦПФР 1" 
               FontFamily="Arial" FontSize="16" FlowDirection="RightToLeft" 
               />
        <TextBox Grid.Column="1" Grid.Row="5" Padding="5" Text="..." 
                  FontSize="16"  Grid.RowSpan="3"/>

        <Label Grid.Column="0" Grid.Row="6"  Content="НКЦПФР 2" 
               FontFamily="Arial" FontSize="16" FlowDirection="RightToLeft" 
               />
        <TextBox Grid.Column="1" Grid.Row="6" Padding="5" Text="..." 
                  FontSize="16"  />

        <Label Grid.Column="0" Grid.Row="7"  Content="НАЗК" 
               FontFamily="Arial" FontSize="16" FlowDirection="RightToLeft"  
               />
        <TextBox Grid.Column="1" Grid.Row="7" Padding="5" Text="..."
                  FontSize="16"/>
        <Label Grid.Column="0" Grid.Row="8"  Content="Банки"
               FontFamily="Arial" FontSize="16" FlowDirection="RightToLeft"    
               />
        <TextBox Grid.Column="1" Grid.Row="8" Padding="5" Text="..."
                  FontSize="16"/>
    </Grid>
</Window>
